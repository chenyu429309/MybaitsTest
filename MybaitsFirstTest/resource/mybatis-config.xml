<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<!-- properties?,settings?,typeAliases?,typeHandlers?,objectFactory?,objectWrapperFactory?,plugins?,environments?,databaseIdProvider?,mappers? -->
<configuration>

	<!-- 配置扫描器 -->
	<properties resource="db.properties">
		<!-- <property name="username" value="dev_user" /> -->
		<!-- <property name="password" value="F2Fa3!33TYyg" /> -->
	</properties>
	<!-- 配置扫描器 -->

	<!-- 配置全局的属性 -->
	<settings>
	<!-- 配置是否开启二级缓存 -->
	<!-- <setting name="cacheEnabled" value="true" /> -->
	<!-- 配置是否开启懒加载 -->
	<setting name="lazyLoadingEnabled" value="true" />
	<!-- <setting name="multipleResultSetsEnabled" value="true" /> -->
	<!-- <setting name="useColumnLabel" value="true" /> -->
	<!-- <setting name="useGeneratedKeys" value="false" /> -->
	<!-- <setting name="autoMappingBehavior" value="PARTIAL" /> -->
	<!-- <setting name="autoMappingUnknownColumnBehavior" value="WARNING" /> -->
	<!-- <setting name="defaultExecutorType" value="SIMPLE" /> -->
	<!-- <setting name="defaultStatementTimeout" value="25" /> -->
	<!-- <setting name="defaultFetchSize" value="100" /> -->
	<!-- <setting name="safeRowBoundsEnabled" value="false" /> -->
	<!-- <setting name="mapUnderscoreToCamelCase" value="false" /> -->
	<!-- <setting name="localCacheScope" value="SESSION" /> -->
	<!-- <setting name="jdbcTypeForNull" value="OTHER" /> -->
	<!-- <setting name="lazyLoadTriggerMethods" value="equals,clone,hashCode,toString" 
		/> -->
	</settings>
	<!-- 配置别名 -->
	<typeAliases>
		<!-- 第一种方案为：使用包策略 即在这个包下的类都可以用首字母小写作为别名 -->
		<package name="com.felix.pojo" />
		<!-- 第二种方案为： 给类制定明别的别名 <typeAlias alias="Author" type="domain.blog.Author"/> -->
	</typeAliases>
	<!-- 配置别名 -->

	<!-- 类型处理器 -->
	<typeHandlers>
		<!-- 自定义了一种字符串类型 -->
		<typeHandler jdbcType="VARCHAR" javaType="string"
			handler="com.felix.utils.MyStringTypeHandler" />
		<!-- 自定义枚举类型 -->
		<typeHandler handler="org.apache.ibatis.type.EnumOrdinalTypeHandler"
			javaType="com.felix.utils.Sex" />
	</typeHandlers>
	<!-- 类型处理器 -->
	
	<!-- 配置环境变量（有一个默认值，下面会有好几种方案，但要选择一种方案，否则会报空指针异常） -->
	<environments default="development">
		<!-- 配置第一种环境变量 -->
		<environment id="development">
			<!-- 配置事务的策略为JDBC -->
			<transactionManager type="JDBC" />
			<!-- 配置数据源的策略为POOLED -->
			<dataSource type="POOLED">
				<property name="driver" value="${datasource.driver}" />
				<property name="url" value="${datasource.url}" />
				<property name="username" value="${datasource.username}" />
				<property name="password" value="${datasource.password}" />
			</dataSource>
		</environment>
	</environments>
	<!-- 配置环境变量-->
	
	<!-- 数据库标识 -->
	<databaseIdProvider type="DB_VENDOR">
		<property name="SQL Server" value="sqlserver" />
		<property name="MySQL" value="mysql" />
		<property name="DB2" value="db2" />
		<property name="Oracle" value="oracle" />
	</databaseIdProvider>
	<!-- 数据库标识 -->
	
	<!-- 映射条件 -->
	<mappers>
		<!-- 第一种：使用resource -->
		<!-- <mapper resource="org/mybatis/example/BlogMapper.xml" /> -->
		<!-- 第二种： 使用url -->
		<!-- <mapper url="file:///var/mappers/AuthorMapper.xml"/> -->
		<!-- 第三种： 使用class -->
		<!-- <mapper class="org.mybatis.builder.AuthorMapper"/> -->
		<!-- 第四种： 使用package -->
		<package name="com.felix.mapper" />
	</mappers>
<!-- 映射条件 -->
</configuration>